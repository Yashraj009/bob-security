{
  "name": "bob-security",
  "displayName": "bob-security",
  "description": "A linter that uses Semgrep and AI to fix security issues.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bob-security.setApiKey",
        "title": "Set Groq API Key",
        "category": "AI Security Linter"
      },
      {
        "command": "bob-security.fixWithAI",
        "title": "Fix Security Issue with AI",
        "category": "AI Security Linter"
      },
      {
        "command": "bob-security.explainIssue",
        "title": "Explain Security Issue",
        "category": "AI Security Linter"
      },
      {
        "command": "bob-security.scanCurrentFile",
        "title": "Scan Current File",
        "category": "AI Security Linter"
      },
      {
        "command": "bob-security.createRulesFile",
        "title": "Create Semgrep Rules File",
        "category": "AI Security Linter"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == python",
          "command": "bob-security.scanCurrentFile",
          "group": "security"
        }
      ],
      "commandPalette": [
        {
          "command": "bob-security.setApiKey"
        },
        {
          "command": "bob-security.fixWithAI"
        },
        {
          "command": "bob-security.explainIssue"
        },
        {
          "command": "bob-security.scanCurrentFile"
        },
        {
          "command": "bob-security.createRulesFile"
        }
      ]
    },
    "configuration": {
      "title": "Bob Security",
      "properties": {
        "bobSecurity.enableAutoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files when opened or saved"
        },
        "bobSecurity.semgrepPath": {
          "type": "string",
          "default": "semgrep",
          "description": "Path to semgrep executable"
        },
        "bobSecurity.maxTokens": {
          "type": "number",
          "default": 1024,
          "description": "Maximum tokens for AI responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.9.0",
    "@xenova/transformers": "^2.17.2",
    "groq-sdk": "^0.32.0",
    "marked": "^16.3.0"
  }
}
